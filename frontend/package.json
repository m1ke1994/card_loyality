{
  "name": "loyalty-frontend",
  "private": true,
  "version": "1.0.0",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev:client": "npm run dev --workspace apps/client-pwa",
    "dev:staff": "npm run dev --workspace apps/staff-pwa",
    "dev:admin": "npm run dev --workspace apps/admin",
    "build": "npm run build --workspace apps/client-pwa && npm run build --workspace apps/staff-pwa && npm run build --workspace apps/admin && npm run build --workspace packages/widget",
    "lint": "npm run lint --workspace apps/client-pwa || true",
    "preview": "npm run preview --workspace apps/client-pwa"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@vercel/node": "^5.5.16",
    "@vitejs/plugin-vue": "^5.0.0",
    "autoprefixer": "^10.4.16",
    "postcss": "^8.4.32",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.3.3",
    "vite": "^5.0.10",
    "vite-plugin-pwa": "^0.17.4"
  },
  "dependencies": {
    "@vueuse/motion": "^2.1.0",
    "axios": "^1.6.2",
    "qrcode": "^1.5.3",
    "vue": "^3.3.11",
    "vue-router": "^4.2.5"
  }
}
